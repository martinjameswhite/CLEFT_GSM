
FC = ifort
#FC = pgf90
#FC = gfortran
FFLAGS =
LFLAGS =
OBJECTS = cdgamma.o drfftb.o drfftf.o drffti.o fftlog.o asa063.o PS_module.o PS_main.o
.PHONY: clean help

output.txt: PS_main.exe
	./PS_main.exe > output.txt

PS_main.exe: $(OBJECTS)
	$(FC) $(LFLAGS) $(OBJECTS) -o PS_main.exe

%.o : %.f
	$(FC) $(FFLAGS) -c $< 

%.o : %.f90
	$(FC) $(FFLAGS) -c $< 

clean:
	rm -f $(OBJECTS) *.exe *.mod

help:
	@echo "Valid targets:"
	@echo "  PS_main.exe"
	@echo "  PS_main.o"
	@echo "  PS_module.o"
	@echo "  asa063.o"
	@echo "  fftlog.o"
	@echo "  drffti.o"
	@echo "  drfftf.o"
	@echo "  drfftb.o"
	@echo "  cdgamma.o"
	@echo "  clean:  removes .o and .exe .mod files"
